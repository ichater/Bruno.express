	<div class="row">
			<div style="width: 30%; margin: 25px auto;">
                <h1 style="text-align: center">Add a friend!</h1>
				<form action="/Brunosfriends" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="name" placeholder="friendName">	
					</div>
